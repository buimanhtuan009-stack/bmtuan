@model List<WebApplication29.Models.Xe>
@{
    ViewBag.Title = "Car Detail – Morent UI";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
*, *::before, *::after {
    box-sizing: border-box;
}

html, body {
    margin: 0;
    background: #F6F7F9;
    font-family: 'Inter', sans-serif;
    max-width: 100%;
    overflow-x: hidden;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

a { text-decoration: none; }

.layout {
    display: grid;
    grid-template-columns: 260px 1fr;
    width: 100%;
}

.sidebar {
    background: #fff;
    height: 100vh;
    padding: 25px;
    position: sticky;
    top: 0;
    border-right: 1px solid #e5e7eb;
}

.filter-title {
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    color: #94a3b8;
    margin-bottom: 10px;
}

.filter-item {
    font-size: 14px;
    margin: 6px 0;
    color: #334155;
}

.sidebar hr {
    margin: 20px 0;
    border-color: #e5e7eb;
}

.content {
    padding: 30px;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 28px;
    width: 100%;
}

.car-box,
.info-box,
.review-box,
.morent-card {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,.06);
}

.car-box { padding: 25px; }
.info-box { padding: 28px; }

.main-image-box {
    position: relative;
    height: 320px;
    border-radius: 20px;
    overflow: hidden;
    background: linear-gradient(135deg, #3563E9, #5A85F7);
    display: flex;
    align-items: center;
    justify-content: center;
}

.bg-pattern {
    position: absolute;
    inset: 0;
    background: repeating-linear-gradient(
        -60deg,
        rgba(255,255,255,.06) 0 30px,
        transparent 30px 60px
    );
}

.car-main-img {
    width: 95%;
    max-height: 260px;
    object-fit: contain;
    position: relative;
}

.thumbs {
    display: flex;
    gap: 14px;
    margin-top: 15px;
}

.thumb {
    width: 110px;
    height: 75px;
    border-radius: 12px;
    object-fit: cover;
    cursor: pointer;
    border: 2px solid transparent;
}

.thumb.active {
    border-color: #3563E9;
}

.car-title {
    font-size: 28px;
    font-weight: 800;
}

.rating i {
    color: #facc15;
}

.mota {
    font-size: 14px;
    color: #94a3b8;
    line-height: 1.7;
    max-width: 420px;
}

.spec-row {
    display: grid;
    grid-template-columns: repeat(4, max-content);
    gap: 32px 80px;
    padding: 32px 0;
    border-bottom: 1px solid #F1F5F9;
}

.spec-label {
    font-size: 14px;
    color: #90A3BF;
}

.spec-value {
    font-size: 18px;
    font-weight: 700;
    color: #1A202C;
}

.price-row {
    margin-top: 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.price-value {
    font-size: 28px;
    font-weight: 900;
}

.price-unit {
    font-size: 14px;
    color: #94a3b8;
}

.old-pricee {
    font-size: 13px;
    color: #94a3b8;
    text-decoration: line-through;
}

.rent-btn {
    background: #3B5FE7;
    color: #fff;
    border: none;
    padding: 14px 36px;
    border-radius: 14px;
    font-weight: 700;
    cursor: pointer;
}

.fav {
    font-size: 18px;
    color: #94a3b8;
    cursor: pointer;
    padding: 6px;
    border-radius: 50%;
}

.fav.active {
    color: #ef233c;
    background: rgba(239,35,60,.15);
}



    /* BOX */
    .review-box {
        margin: 30px;
        padding: 28px;
        border-radius: 16px;
    }

    .rv-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 8px;
    }

        .rv-header h3 {
            font-size: 20px;
            font-weight: 800;
            margin: 0;
        }

    .rv-badge {
        background: #3563E9;
        color: #fff;
        font-size: 13px;
        font-weight: 700;
        padding: 4px 10px;
        border-radius: 8px;
    }

    .rv-item {
        display: flex;
        gap: 16px;
        padding: 24px 0;
        border-bottom: 1px solid #E5E7EB;
    }

    .rv-avatar {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .rv-content {
        max-width: 520px;
    }

    .rv-name {
        font-size: 16px;
        font-weight: 700;
        margin-bottom: 2px;
    }

    .rv-role {
        font-size: 13px;
        color: #94A3B8;
        margin-bottom: 10px;
    }

    .rv-text {
        font-size: 14px;
        line-height: 1.6;
        color: #64748B;
    }
    .rv-right {
        margin-left: auto;
        text-align: right;
        white-space: nowrap;
    }

    .rv-date {
        font-size: 13px;
        color: #94A3B8;
    }

    .rv-stars {
        margin-top: 6px;
        font-size: 14px;
        color: #FBBF24;
    }

    .show-all {
        margin-top: 22px;
        background: none;
        border: none;
        color: #3563E9;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        text-align: center;
    }

.morent-grid {
    padding: 20px 30px 40px;
    display: grid;
    grid-template-columns: repeat(3,1fr);
    gap: 26px;
}

.car-img {
    height: 150px;
    object-fit: cover;
    border-radius: 12px;
}


@@media (max-width: 992px) {
    .layout {
        grid-template-columns: 1fr;
    }

    .sidebar {
        display: none;
    }

    .content {
        grid-template-columns: 1fr;
        padding: 20px;
    }

    .morent-grid {
        grid-template-columns: repeat(2,1fr);
    }
}

@@media (max-width: 576px) {
    .content {
        padding: 12px;
        gap: 16px;
    }

    .main-image-box {
        height: auto;
    }

    .car-main-img {
        max-height: 220px;
    }

    .thumbs {
        overflow-x: auto;
    }

    .spec-row {
        grid-template-columns: 1fr;
        gap: 16px;
    }

    .price-row {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
    }

    .rent-btn {
        width: 100%;
    }

    .review-box {
        margin: 12px;
        padding: 16px;
    }

    .rv-item {
        flex-direction: column;
    }

    .rv-right {
        margin-left: 0;
        text-align: left;
    }

    .morent-grid {
        grid-template-columns: 1fr;
        padding: 12px;
        gap: 14px;
    }
}
   

    .morent-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
    }

    .morent-card {
        padding: 18px;
        border-radius: 14px;
        display: flex;
        flex-direction: column;
    }
    .card-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

        .card-top h4 {
            font-size: 16px;
            font-weight: 700;
            margin: 0;
        }

        .card-top small {
            font-size: 12px;
            color: #94a3b8;
        }

    .car-img {
        height: 130px;
        object-fit: contain;
        margin: 14px 0 10px;
    }

    .spec-line {
        display: flex;
        justify-content: space-between;
        font-size: 12px;
        color: #94a3b8;
        margin-top: 6px;
    }

    .price-area {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
    }

        .price-area .price {
            font-size: 18px;
            font-weight: 700;
        }

    .old-price {
        font-size: 12px;
        color: #94a3b8;
        text-decoration: line-through;
    }

    .price-area .rent-btn {
        padding: 8px 14px;
        font-size: 13px;
        border-radius: 8px;
    }

  
    .morent-card .fav {
        font-size: 16px;
    }



</style>
 
<div class="layout">

    <!-- ===== SIDEBAR ===== -->
    <div class="sidebar">
        <div class="filter-title">TYPE</div>
        <div class="filter-item"><input checked type="checkbox"> Sport</div>
        <div class="filter-item"><input type="checkbox"> SUV</div>
        <div class="filter-item"><input type="checkbox"> MPV</div>
        <div class="filter-item"><input type="checkbox"> Sedan</div>
        <div class="filter-item"><input type="checkbox"> Coupe</div>
        <div class="filter-item"><input type="checkbox"> Hatchback</div>

        <hr />

        <div class="filter-title">CAPACITY</div>
        <div class="filter-item"><input checked type="checkbox"> 2 Person</div>
        <div class="filter-item"><input type="checkbox"> 4 Person</div>
        <div class="filter-item"><input type="checkbox"> 6 Person</div>
        <div class="filter-item"><input type="checkbox"> 8+ Person</div>

        <hr />

        <div class="filter-title">PRICE</div>
        <input type="range" style="width:100%">
        <small>Max $100.00</small>
    </div>

    <div>

        <div class="content">
            <div class="car-box">
                <div class="main-image-box">
                    <div class="bg-pattern"></div>
                    <img src="~/Content/img/Ảnh chụp màn hình 2025-12-09 154714.png" class="car-main-img" id="mainCarImage" />
                </div>

                <div class="thumbs">
                    <img src="~/Content/img/Ảnh chụp màn hình 2025-12-09 154723.png" class="thumb active" onclick="changeImage(this)" />
                    <img src="~/Content/img/Ảnh chụp màn hình 2025-12-09 154731.png" class="thumb" onclick="changeImage(this)" />
                    <img src="~/Content/img/Ảnh chụp màn hình 2025-12-09 154737.png" class="thumb" onclick="changeImage(this)" />
                </div>
            </div>

            <div class="info-box">
                <div class="car-title">Nissan GT-R    <i class="fa fa-heart fav"></i></div>
             

                <div class="rating">
                    <i class="fa fa-star"></i><i class="fa fa-star"></i>
                    <i class="fa fa-star"></i><i class="fa fa-star"></i>
                    <i class="fa-regular fa-star"></i>
                    <a>440+ Reviewer</a>
                </div>

                <div class="desc">
                    <p class="mota">
                        NISMO has become the embodiment of Nissan's outstanding performance,
                        inspired by the most unforgiving proving ground, the "race track".
                    </p>

                </div>

                <div class="spec-row">
                    <div class="spec-col">
                        <div class="spec-label">Type Car</div>
                        <div class="spec-label">Steering</div>
                    </div>

                    <div class="spec-col">
                        <div class="spec-value">Sport</div>
                        <div class="spec-value">Manual</div>

                    </div>

                    <div class="spec-col">
                        <div class="spec-label">Capacity</div>
                        <div class="spec-label">Gasoline</div>

                    </div>

                    <div class="spec-col">
                        <div class="spec-value">2 Person</div>

                        <div class="spec-value">70L</div>
                    </div>
                </div>



                <div class="price-row">
                    <div class="price-box">
                        <span class="price-value">$80.00</span>
                        <span class="price-unit">/ day</span>
                        <div class="old-pricee">$100.00</div>
                    </div>
                    <button class="rent-btn">Rent Now</button>
                </div>

            </div>
        </div>

        <div class="review-box">
            <div class="rv-header">
                <h3>Reviews</h3>
                <span class="rv-badge">13</span>
            </div>

            <!-- REVIEW 1 -->
            <div class="rv-item">
                <img src="https://i.pravatar.cc/100?img=3" class="rv-avatar" />

                <div class="rv-content">
                    <div class="rv-name">Alex Stanton</div>
                    <div class="rv-role">CEO at Bukalapak</div>

                    <div class="rv-text">
                        We are very happy with the service from the MORENT App. Morent has low price
                        and also a large variety of cars with good and comfortable facilities.
                        In addition, the service provided by the officers is also very friendly and very polite.
                    </div>
                </div>

                <div class="rv-right">
                    <div class="rv-date">21 July 2022</div>
                    <div class="rv-stars">⭐⭐⭐⭐⭐</div>
                </div>
            </div>

            <!-- REVIEW 2 -->
            <div class="rv-item">
                <img src="https://i.pravatar.cc/100?img=4" class="rv-avatar" />

                <div class="rv-content">
                    <div class="rv-name">Skylar Dias</div>
                    <div class="rv-role">CEO at Amazon</div>

                    <div class="rv-text">
                        We are greatly helped by the services of the MORENT Application. Morent has low prices
                        and also a wide variety of cars with good and comfortable facilities.
                        In addition, the service provided by the officers is also very friendly and very polite.
                    </div>
                </div>

                <div class="rv-right">
                    <div class="rv-date">20 July 2022</div>
                    <div class="rv-stars">⭐⭐⭐⭐⭐</div>
                </div>
            </div>

            <button class="show-all">Show All ⌄</button>
        </div>


        <!-- RECOMMEND -->
        <div class="section-header">
            <span>Recommendation Car</span>
            <a href="#" style="color:#3563E9;font-size:14px;">View All</a>
        </div>

        <div class="morent-grid">
            @foreach (var xe in Model.Take(6))
            {
                <div class="morent-card">
                    <div class="card-top">
                        <div>
                            <h4>@xe.TenXe</h4>
                            <small>@xe.LoaiXe</small>
                        </div>
                        <i class="fa fa-heart fav"></i>

                    </div>

                    @{
                        string img = xe.AnhXe;
                        if (!string.IsNullOrEmpty(img))
                        {
                            if (img.StartsWith("/"))
                            {
                                <img src="@Url.Content(img)" class="car-img" />
                            }
                            else
                            {
                                <img src="@Url.Content("~/Content/img/" + img)" class="car-img" />
                            }
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/300x150" class="car-img" />
                        }
                    }

                    <div class="spec-line">
                        <span><i class="fa fa-gas-pump"></i> 90L</span>
                        <span><i class="fa fa-cog"></i> Manual</span>
                        <span><i class="fa fa-user"></i> @xe.SoChoNgoi People</span>
                    </div>

                    <div class="price-area">
                        <div>
                            <div class="price" style="font-size:20px;">$@xe.GiaMoiNgay / day</div>
                            <div class="old-price">$100.00</div>
                        </div>
                        <button class="rent-btn" style="padding:10px 18px;font-size:14px;">Rent Now</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script>
    document.querySelectorAll(".fav").forEach(fav => {
        fav.addEventListener("click", function () {
            this.classList.toggle("active");
        });
    });
</script> 
