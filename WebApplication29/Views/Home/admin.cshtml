                <div class="info-grid">
                    <div class="info-item"><small>Location</small><div>Kota Semarang</div></div>
                    <div class="info-item"><small>Date</small><div>20 July 2022</div></div>
                    <div class="info-item"><small>Time</small><div>07.00</div></div>
                </div>

                <h4 style="margin-top:15px;">Drop-Off</h4>
                <div class="info-grid">
                    <div class="info-item"><small>Location</small><div>Kota Semarang</div></div>
                    <div class="info-item"><small>Date</small><div>21 July 2022</div></div>
                    <div class="info-item"><small>Time</small><div>01.00</div></div>
                </div>

                <div style="margin-top:20px; font-size:18px; font-weight:bold;">
                    Total Rental Price
                    <span style="float:right;">$80.00</span>
                </div>
            </div>

            <!-- RIGHT COLUMN -->
            <div>

                <div class="card">
                    <h3>Top 5 Car Rental</h3>

                    <div class="donut">
                        <div class="center">
                            72,030
                            <small style="opacity:0.6; font-weight:normal;">Rental Car</small>
                        </div>
                    </div>
                </div>

                <div class="card" style="margin-top:25px;">
                    <h3>Recent Transactions</h3>

                    <div class="transaction">
                        <img src="/images/car.png">
                        <div>
                            <div>Nissan GT – R</div>
                            <small>Sport Car</small>
                        </div>
                        <span>$80.00</span>
                    </div>

                    <div class="transaction">
                        <img src="/images/car.png">
                        <div>
                            <div>Koenigsegg</div>
                            <small>Sport Car</small>
                        </div>
                        <span>$99.00</span>
                    </div>

                    <div class="transaction">
                        <img src="/images/car.png">
                        <div>
                            <div>Rolls – Royce</div>
                            <small>Sport Car</small>
                        </div>
                        <span>$96.00</span>
                    </div>

                </div>

            </div>
        </div>

    </div>

</div>
