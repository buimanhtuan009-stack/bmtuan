<div class="section-title">
    <span>Popular Car</span>
    <a href="@Url.Action("admin1", "admin")" class="view-all">View All</a>
</div>

<div class="morent-grid">
    @foreach (var xe in Model.Take(4))
    {
        <div class="morent-card">
            <div class="morent-card-top">
                <div>
                    <h4>@xe.TenXe</h4>
                    <small>@xe.LoaiXe</small>
                </div>
                <i class="fa fa-heart fav"></i>
            </div>

         
            <div class="position-relative text-center">
                @{
                    var img = xe.AnhXe;

                    if (!string.IsNullOrEmpty(img))
                    {
                        if (img.StartsWith("/"))
                        {
                            <img src="@Url.Content(img)" class="car-img" alt="@xe.TenXe" />
                        }
                        else
                        {
                            <img src="@Url.Content("~/Content/img/" + img)" class="car-img" alt="@xe.TenXe" />
                        }
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/150" class="car-img" alt="No Image" />
                    }
                }
            </div>

            <div class="morent-spec">
                <span><i class="fa fa-gas-pump"></i> 90L</span>
                <span><i class="fa fa-cog"></i> Manual</span>
                <span><i class="fa fa-user"></i> @xe.SoChoNgoi People</span>
            </div>

            <div class="morent-card-bottom">
                <div>
                    <span class="price">$@xe.GiaMoiNgay.00</span> / day<br />
                    <small class="old-price">$100.00</small>
                </div>
                <a href="@Url.Action("ChiTiet", "Home", new { id = xe.MaXe })"
                   class="rent-btn">
                    Rent Now
                </a>
            </div>
        </div>
    }
</div>



