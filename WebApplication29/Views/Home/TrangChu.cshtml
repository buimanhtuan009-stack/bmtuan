@model List<WebApplication29.Models.Xe>

@{
    ViewBag.Title = "Trang Chủ";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<style>
    body {
        background: #f5f7fb;
        font-family: Arial;
    }

    /* ================= BANNER ================= */
    .banner-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 25px;
        margin-bottom: 40px;
    }

    .banner-box {
        background: linear-gradient(135deg, #2f66f5, #5f89ff);
        color: white;
        border-radius: 18px;
        padding: 28px;
        position: relative;
        overflow: hidden;
        min-height: 230px;
    }

    .banner-box.second {
        background: linear-gradient(135deg, #4e8dff, #3667f2);
    }

    .banner-box h2 {
        font-weight: 700;
        margin-bottom: 12px;
        font-size: 24px;
    }

    .banner-box p {
        opacity: 0.9;
        margin-bottom: 15px;
        font-size: 14px;
    }

    .banner-btn {
        background: white;
        color: #2f66f5;
        padding: 8px 18px;
        border-radius: 8px;
        font-weight: bold;
        border: none;
        cursor: pointer;
    }

    .banner-box img {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 230px;
        opacity: 0.95;
        transform: translateY(18px);
    }

    /* ================= SEARCH FORM ================= */
    .search-container {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 40px 0;
    }

    .search-card {
        background: #ffffff;
        border-radius: 20px;
        padding: 22px 28px;
        width: 48%;
        box-shadow: 0px 6px 25px rgba(0,0,0,0.06);
    }

    .search-title {
        font-weight: bold;
        font-size: 15px;
        display: flex;
        align-items: center;
        margin-bottom: 12px;
    }

    .search-title i {
        color: #2f66f5;
        font-size: 10px;
        margin-right: 6px;
    }

    .search-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 18px;
    }

    .label-small {
        font-size: 13px;
        font-weight: bold;
        color: #333;
        margin-bottom: 6px;
        display: block;
    }

    .select-box {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
    }

    .swap-btn-center {
        margin: 0 18px;
        background: #2f66f5;
        border: none;
        color: white;
        padding: 16px 18px;
        border-radius: 12px;
        font-size: 20px;
        cursor: pointer;
        height: fit-content;
    }

    /* ================= LIST CAR ================= */
    .car-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 22px;
    }

    .car-item {
        border: 1px solid #eee;
        padding: 15px;
        border-radius: 15px;
        background: white;
        transition: .2s;
    }

    .car-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px #ddd;
    }

    .car-item img {
        width: 100%;
        border-radius: 10px;
        height: 120px;
        object-fit: cover;
    }

    .price {
        font-size: 17px;
        font-weight: bold;
        color: #2f66f5;
    }

    .btn-rent {
        background: #2f66f5;
        color: white;
        border: none;
        padding: 8px 18px;
        border-radius: 6px;
        cursor: pointer;
    }

    /* ===== SECTION TITLE ===== */
    .section-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 25px 5px 15px;
        font-size: 18px;
        font-weight: bold;
        color: #1a1a1a;
    }

    .view-all {
        font-size: 14px;
        font-weight: 600;
        color: #3563e9;
        text-decoration: none;
    }

    /* ===== GRID ===== */
    .morent-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 22px;
        margin: 0 20px 40px;
    }

    /* ===== CARD ===== */
    .morent-card {
        background: #fff;
        border-radius: 14px;
        padding: 16px;
        transition: 0.2s;
        position: relative;
    }

    .morent-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    /* ===== TOP ===== */
    .morent-card-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .morent-card-top h4 {
        font-size: 15px;
        margin: 0;
    }

    .morent-card-top small {
        color: #888;
        font-size: 12px;
    }

    .fav {
        color: #e63946;
        font-size: 16px;
        cursor: pointer;
    }

    /* ===== IMAGE ===== */
    .car-img {
        width: 100%;
        height: 120px;
        object-fit: contain;
        margin: 15px 0 10px;
    }

    /* ===== SPEC ===== */
    .morent-spec {
        display: flex;
        justify-content: space-between;
        font-size: 12px;
        color: #777;
        margin-bottom: 10px;
    }

    /* ===== PRICE + BUTTON ===== */
    .morent-card-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .price {
        font-size: 16px;
        font-weight: bold;
        color: #3563e9;
    }

    .old-price {
        text-decoration: line-through;
        font-size: 12px;
        color: #aaa;
    }

    .rent-btn {
        background: #3563e9;
        color: white;
        border: none;
        padding: 8px 16px;
        font-size: 13px;
        border-radius: 8px;
        cursor: pointer;
    }

    /* ===== SHOW MORE ===== */
    .show-more-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        margin: 40px 0;
    }

    .show-more-btn {
        background: #3F6FF6;
        color: #fff;
        border: none;
        padding: 8px 22px;
        border-radius: 6px;
        font-size: 14px;
        cursor: pointer;
    }

    .total-car {
        position: absolute;
        right: 40px;
        font-size: 12px;
        color: #9aa5b1;
    }

    
    @@media (max-width: 480px) {

        body {
            margin: 0;
            padding: 0 10px;
            overflow-x: hidden;
        }

        /* Banner */
        .banner-wrapper {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        /* Search */
        .search-container {
            flex-direction: column;
            width: 100%;
            gap: 12px;
            margin: 20px 0;
        }

        .search-card {
            width: 100%;
            padding: 15px;
        }

        .search-row {
            grid-template-columns: 1fr;
            gap: 10px;
        }

        /* Product grid */
        .morent-grid {
            grid-template-columns: 1fr !important;
            margin: 0;
            gap: 15px;
        }
    }

    /* ================= CARD (LARGE BANNER) ================= */
    .card {
        position: relative;
        width: 700px;
        height: 350px;
        border-radius: 20px;
        overflow: hidden;
    }

    .card-bg {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .card-text {
        position: absolute;
        top: 40px;
        left: 40px;
        width: 45%;
        color: white;
    }

    .card-text h2 {
        margin: 0 0 10px 0;
        font-size: 28px;
        font-weight: bold;
    }

    .card-text p {
        font-size: 16px;
        margin-bottom: 20px;
    }

    .card-text button {
        padding: 12px 25px;
        background: white;
        border: none;
        border-radius: 10px;
        font-weight: bold;
        color: #1A4EF5;
    }

    /* Fav */
    .fav {
        font-size: 18px;
        color: #94a3b8;
        cursor: pointer;
        border-radius: 50%;
        padding: 6px;
        transition: .2s;
    }

    .fav.active {
        color: #ef233c;
        background: rgba(239, 35, 60, 0.15);
    }

  
    @@media (max-width: 480px) {

        /* Card large responsive */
        .card {
            width: 100% !important;
            height: 220px !important;
            border-radius: 16px;
        }

        .card-text {
            width: 80%;
            top: 25px;
            left: 20px;
        }

        .card-text h2 {
            font-size: 18px;
            line-height: 22px;
        }

        .card-text p {
            font-size: 13px;
        }

        .card-text button {
            padding: 8px 15px;
            font-size: 12px;
        }

        /* Search */
        .search-container {
            flex-direction: column;
            gap: 15px;
            width: 100%;
        }

        .search-card {
            width: 100%;
            padding: 15px;
        }

        .search-row {
            grid-template-columns: 1fr;
        }

        .swap-btn-center {
            width: 100%;
            margin: 0;
            padding: 10px 0;
        }

        /* Cars */
        .morent-grid {
            grid-template-columns: 1fr !important;
            gap: 18px;
        }

        .car-img {
            height: 100px;
        }
    }
    @@media (max-width: 480px) {

   
    header .logo {
        font-size: 20px !important;
    }

   
    header i,
    header .icon {
        font-size: 16px !important;
    }

  
    header .icon-group {
        gap: 10px !important;
    }

    
    header img,
    header .avatar {
        width: 28px !important;
        height: 28px !important;
        border-radius: 50%;
        object-fit: cover;
    }

 
    header {
        padding: 10px 12px !important;
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 100% !important;
    }

    header .search-box {
        max-width: 150px !important;
        padding: 6px 10px !important;
    }

    header input {
        font-size: 13px !important;
    }

html, body {
    max-width: 100% !important;
    overflow-x: hidden !important;
}



@@media (max-width: 480px) {

  
    .card {
        width: 100% !important;
