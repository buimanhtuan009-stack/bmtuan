@{
    ViewBag.Title = "admin1";
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Morent - Dashboard</title>

    <!-- Optional: use Inter from Google for closer match -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
/* ===== RESET ===== */
*,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
html,body{height:100%;font-family:Inter,sans-serif;background:#F6F7FA;color:#1A202C}
img{max-width:100%;display:block}

/* ===== NAVBAR ===== */
.navbar{position:fixed;top:0;left:0;width:100%;height:72px;background:#fff;border-bottom:1px solid #E6E9EE;display:flex;align-items:center;justify-content:space-between;padding:0 28px;z-index:40}
.logo{font-size:22px;font-weight:700;color:#3563E9}
.search-box{display:flex;align-items:center;gap:10px;width:520px;max-width:46%;height:44px;border:1px solid #ECEFF4;border-radius:28px;padding:0 14px}
.search-box input{border:0;outline:0;width:100%;font-size:14px}
.nav-right{display:flex;gap:12px;align-items:center}
.icon-btn,.avatar{width:40px;height:40px;border-radius:50%}
.icon-btn{border:1px solid #ECEFF4;display:flex;align-items:center;justify-content:center}

/* ===== LAYOUT ===== */
.page-wrapper{display:flex;margin-top:72px;min-height:calc(100vh - 72px)}
.sidebar{width:240px;background:#fff;padding:20px;border-right:1px solid #E9EEF6;position:fixed;top:72px;bottom:0;overflow:auto}
.dashboard{margin-left:260px;padding:28px;width:calc(100% - 260px);display:grid;grid-template-columns:1.55fr 1fr;gap:22px}

/* ===== SIDEBAR ===== */
.menu-section{font-size:12px;font-weight:600;color:#c1c7d6;margin:20px 0 10px}
.menu-item{display:flex;align-items:center;gap:12px;padding:10px 12px;border-radius:10px;color:#6b7a99;font-size:15px;cursor:pointer}
.menu-item.active{background:#3d5cff;color:#fff}
.menu-item i{font-size:20px}

/* ===== CARD ===== */
.card{background:#fff;border-radius:14px;padding:18px;box-shadow:0 6px 20px rgba(12,20,30,.04)}
.card h3{font-size:16px;font-weight:600;margin-bottom:14px}

/* ===== DETAILS ===== */
.map{height:200px;border-radius:12px;overflow:hidden;background:#f2f6fb;margin-bottom:16px}
.car-info{display:flex;align-items:center;gap:12px}
.car-info img{width:84px;height:48px;border-radius:10px}
.car-id{margin-left:auto;font-size:13px;color:#9ca3af}

/* ===== PICK ===== */
.pick-title{font-size:15px;font-weight:600;display:flex;gap:8px;margin:10px 0}
.pick-title .dot{width:10px;height:10px;border-radius:50%;background:#3a7bff}
.pick-row{display:flex;gap:28px;margin-bottom:14px}
.field-group{min-width:180px}
.field-label{font-size:12px;color:#6b7280;margin-bottom:6px}
.field-input{background:#F3F4F6;border-radius:8px;padding:10px 12px;display:flex;justify-content:space-between}

/* ===== TOTAL ===== */
.total{display:flex;justify-content:space-between;border-top:1px solid #EEF1F5;padding-top:14px}
.total strong{font-size:26px}

/* ===== CHART ===== */
.chart-content{display:flex;gap:18px;align-items:center}
.chart-circle{width:150px;height:150px;border-radius:50%;background:conic-gradient(#0A276A 0 85deg,#0B63E5 85deg 145deg,#4CA9FF 145deg 220deg,#7DC9FF 220deg 275deg,#BEE6FF 275deg)}
.circle-inner{width:90px;height:90px;border-radius:50%;background:#fff;display:flex;flex-direction:column;align-items:center;justify-content:center}
.chart-list{display:flex;flex-direction:column;gap:10px}

/* ===== TRANSACTION ===== */
.rt-item{display:flex;align-items:center;justify-content:space-between;border-bottom:1px solid #E5E7EB;padding:14px 0}
.rt-img{width:90px}
.rt-title{font-weight:600}
.rt-right{text-align:right}

/* ===== RESPONSIVE ===== */
@@media(max-width:768px){
.sidebar{display:none}
.dashboard{margin:0;padding:16px;grid-template-columns:1fr}
.pick-row{flex-direction:column}
.chart-content{flex-direction:column}
.navbar{padding:0 16px;height:66px}
.search-box{max-width:55%}
}
    </style>

    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

</head>
<body>

    <!-- NAVBAR -->
    <header class="navbar">
        <div style="display:flex; align-items:center; gap:18px;">
            <div class="logo">MORENT</div>
            <div class="search-box">
                <img src="https://cdn-icons-png.flaticon.com/512/622/622669.png" width="18" alt="">
                <input type="text" placeholder="Search something here" />
            </div>
        </div>

        <div class="nav-right">
            <div class="icon-btn"><img src="https://cdn-icons-png.flaticon.com/512/1077/1077035.png" width="18" alt=""></div>
            <div class="icon-btn"><img src="https://cdn-icons-png.flaticon.com/512/1827/1827370.png" width="18" alt=""></div>
            <div class="icon-btn"><img src="https://cdn-icons-png.flaticon.com/512/126/126472.png" width="18" alt=""></div>
            <img src="https://i.pravatar.cc/40" alt="avatar" class="avatar" />
        </div>
    </header>

    <div class="page-wrapper">

        <!-- SIDEBAR -->
        <div class="sidebar">
            <div class="menu-section">MAIN MENU</div>

            <a class="menu-item active">
                <i class="ri-home-4-fill"></i> Dashboard
            </a>

            <a class="menu-item">
                <i class="ri-car-line"></i> Car Rent
            </a>

            <a class="menu-item">
                <i class="ri-bar-chart-line"></i> Insight
            </a>

            <a class="menu-item">
                <i class="ri-refund-2-line"></i> Reimburse
            </a>

            <a class="menu-item">
                <i class="ri-message-2-line"></i> Inbox
            </a>

            <a class="menu-item">
                <i class="ri-calendar-line"></i> Calendar
            </a>

            <div class="menu-section">PREFERENCES</div>

            <a class="menu-item">
                <i class="ri-settings-3-line"></i> Settings
            </a>

            <a class="menu-item">
                <i class="ri-information-line"></i> Help & Center
            </a>

            <a class="menu-item">
                <i class="ri-moon-line"></i> Dark Mode
            </a>

            <a class="menu-item logout">
                <i class="ri-logout-circle-line"></i> Log Out
            </a>
        </div>

        <!-- DASHBOARD GRID -->
        <main class="dashboard">

            <!-- LEFT: Details (big) -->
            <div class="card details">
                <h3>Details Rental</h3>

                <div class="map">
                    <!-- replace src with your map image -->

                    <img src="~/Content/img/Ảnh chụp màn hình 2025-12-10 162242.png" />
                </div>

                <div class="car-info">
                    <img src="~/Content/img/Ảnh chụp màn hình 2025-12-09 154723.png" />
                    <div>
                        <h3>Nissan GT – R</h3>
                        <p style="color:#6b7280; font-size:13px;">Sport Car</p>
                    </div>
                    <span class="car-id">#9761</span>
                </div>

                <!-- pick/drop area rendered below the details map in the same left column
     to reproduce the composition in the sample: we include pick-section under details -->
                <div class="pick-section">
                    <div style="width:100%; margin-top:18px;">
                        <div style="width:100%;">
                            <div class="pick-title">
                                <div class="dot"></div> Pick – Up
                            </div>

                            <div class="pick-row">
                                <div class="field-group">
                                    <div class="field-label">Locations</div>
                                    <div class="field-input">
                                        <span>Kota Semarang</span><span class="arrow">▾</span>
                                    </div>
                                </div>

                                <div class="field-group">
                                    <div class="field-label">Date</div>
                                    <div class="field-input">
                                        <span>20 July 2022</span><span class="arrow">▾</span>
                                    </div>
                                </div>

                                <div class="field-group">
                                    <div class="field-label">Time</div>
                                    <div class="field-input">
                                        <span>07.00</span><span class="arrow">▾</span>
                                    </div>
                                </div>
                            </div>

                            <div class="pick-title" style="margin-top:10px;">
                                <div class="dot"></div> Drop – Off
                            </div>

                            <div class="pick-row">
                                <div class="field-group">
                                    <div class="field-label">Locations</div>
                                    <div class="field-input">
                                        <span>Kota Semarang</span><span class="arrow">▾</span>
                                    </div>
                                </div>

                                <div class="field-group">
                                    <div class="field-label">Date</div>
                                    <div class="field-input">
                                        <span>21 July 2022</span><span class="arrow">▾</span>
                                    </div>
                                </div>

                                <div class="field-group">
                                    <div class="field-label">Time</div>
                                    <div class="field-input">
                                        <span>01.00</span><span class="arrow">▾</span>
                                    </div>
                                </div>
                            </div>

                            <div class="total" style="padding-top:12px;">
                                <div>
                                    <div style="color:#6b7280; font-size:13px;">Total Rental Price</div>
                                    <div style="color:#9aa7b8; font-size:12px;">Overall price and includes rental discount</div>
                                </div>
                                <strong style="font-size:26px;">$80.00</strong>
                            </div>
                        </div>
                    </div>
                </div>
                </div>

                <!-- RIGHT column: top donut + recent -->
                <div style="display:flex; flex-direction:column; gap:18px;">
                    <!-- Top 5 donut -->
                    <div class="chart-card card">
                        <div class="chart-header">
                            <h3>Top 5 Car Rental</h3>
                            <span class="chart-menu">⋯</span>
                        </div>

                        <div class="chart-content">
                            <div class="chart-circle" aria-hidden="true">
                                <div class="circle-inner">
                                    <div class="num">72,030</div>
                                    <div class="lbl">Rental Car</div>
                                </div>
                            </div>

                            <div class="chart-list">
                                <div class="chart-item">
                                    <div class="left"><div class="dot" style="background:#0A276A"></div><div class="label">Sport Car</div></div>
                                    <div class="val">17,439</div>
                                </div>
                                <div class="chart-item">
                                    <div class="left"><div class="dot" style="background:#0B63E5"></div><div class="label">SUV</div></div>
                                    <div class="val">9,478</div>
                                </div>
                                <div class="chart-item">
                                    <div class="left"><div class="dot" style="background:#4CA9FF"></div><div class="label">Coupe</div></div>
                                    <div class="val">18,197</div>
                                </div>
                                <div class="chart-item">
                                    <div class="left"><div class="dot" style="background:#7DC9FF"></div><div class="label">Hatchback</div></div>
                                    <div class="val">12,510</div>
                                </div>
                                <div class="chart-item">
                                    <div class="left"><div class="dot" style="background:#BEE6FF"></div><div class="label">MPV</div></div>
                                    <div class="val">14,406</div>
                                </div>
                            </div>
                        </div>
                    </div>
              
                    <!-- Recent transaction -->
                    <div class="card transactions">
                        <h3 style="display:flex; justify-content:space-between; align-items:center;">
                            Recent Transaction
                            <span style="color:#3563E9; font-size:13px; cursor:pointer;">View All</span>
                        </h3>



                        <div class="rt-list">

                            <div class="rt-item">
                                <img src="~/Content/img/anho1.png" class="rt-img" />
                                <div class="rt-info">
                                    <div class="rt-title">Nissan GT – R</div>
                                    <div class="rt-sub">Sport Car</div>
                                </div>

                                <div class="rt-right">
                                    <div class="rt-date">20 July</div>
                                    <div class="rt-price">$80.00</div>
                                </div>
                            </div>

                            <div class="rt-item">
                                <img src="~/Content/img/anho2.png" class="rt-img" />

                                <div class="rt-info">
                                    <div class="rt-title">Koenigsegg</div>
                                    <div class="rt-sub">Sport Car</div>
                                </div>

                                <div class="rt-right">
                                    <div class="rt-date">19 July</div>
                                    <div class="rt-price">$99.00</div>
                                </div>
                            </div>

                            <div class="rt-item">
                                <img src="~/Content/img/anho3.png" class="rt-img" />

                                <div class="rt-info">
                                    <div class="rt-title">Rolls – Royce</div>
                                    <div class="rt-sub">Sport Car</div>
                                </div>

                                <div class="rt-right">
                                    <div class="rt-date">18 July</div>
                                    <div class="rt-price">$96.00</div>
                                </div>
                            </div>

                            <div class="rt-item">
                                <img src="~/Content/img/anho4.png" class="rt-img" />

                                <div class="rt-info">
                                    <div class="rt-title">CR – V</div>
                                    <div class="rt-sub">SUV</div>
                                </div>

                                <div class="rt-right">
                                    <div class="rt-date">17 July</div>
                                    <div class="rt-price">$80.00</div>
                                </div>
                            </div>

                        </div>
                    </div>




</main>

    </div>

</body>
</html>
