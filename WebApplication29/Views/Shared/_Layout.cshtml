<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Morent Car Rental</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        html, body {
            width: 100%;
            height: 100%;
        }

        body {
            background: #f5f7fa;
            display: flex;
            flex-direction: column;
        }

        /* ========== NAVBAR ========== */
        .navbar {
            width: 100%;
            padding: 20px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #ffffff;
            border-bottom: 1px solid #e6e6e6;
        }

        .logo {
            font-size: 28px;
            font-weight: 700;
            color: #3563E9;
        }

        .nav-left {
            display: flex;
            align-items: center;
            gap: 40px;
        }

        .search-box {
            width: 450px;
            height: 48px;
            background: #f8f9fb;
            border: 1px solid #e6e6e6;
            border-radius: 40px;
            padding: 0 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .search-box input {
                border: none;
                background: transparent;
                width: 100%;
                outline: none;
                font-size: 15px;
            }

        .icon-btn {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background: #f8f9fb;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            font-size: 18px;
            border: 1px solid #e6e6e6;
            position: relative;
        }

        .notification .dot {
            position: absolute;
            top: 6px;
            right: 6px;
            width: 9px;
            height: 9px;
            background: #ff4d4d;
            border-radius: 50%;
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .avatar {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            object-fit: cover;
            cursor: pointer;
        }

        /* ========== MAIN CONTENT ========== */
        .main-container {
            flex: 1; /* ✅ Đẩy footer xuống sát */
            padding: 0; /* ✅ Bỏ padding gây hở */
            margin: 0;
        }

        /* ========== FOOTER ========== */
        .morent-footer {
            background: #ffffff;
            padding: 40px 40px 30px;
            margin-top: 0; /* ✅ Không khoảng trống */
            border-top: 1px solid #eaeaea;
        }

        .footer-top {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 40px;
        }

        .footer-logo {
            color: #3563E9;
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .footer-col h4 {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 14px;
        }

        .footer-col a {
            display: block;
            margin-bottom: 8px;
            font-size: 14px;
            color: #555;
            text-decoration: none;
            cursor: pointer;
            transition: 0.2s;
        }

            .footer-col a:hover {
                color: #3563E9;
            }

        .footer-line {
            border: none;
            border-top: 1px solid #eaeaea;
            margin: 40px 0 20px;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 14px;
            color: #555;
        }

        .footer-links {
            display: flex;
            gap: 20px;
        }

            .footer-links a {
                text-decoration: none;
                color: #555;
            }

        /* ✅ Sửa lỗi media query */
        @@media (max-width: 768px) {
            .footer-top {
                grid-template-columns: 1fr 1fr;
                gap: 30px;
            }

            .footer-bottom {
                flex-direction: column;
                gap: 10px;
                text-align: center;
            }

            .search-box {
                width: 100%;
            }
        }
        /* =========================
   FIX NAVBAR MOBILE 100%
   ========================= */

@@media (max-width: 768px) {

    .navbar {
        padding: 15px 20px;
        flex-wrap: wrap;
        gap: 12px;
    }

    /* Logo + Search box */
    .nav-left {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
    }

    /* Search box full width */
    .search-box {
        width: 100% !important;
        max-width: 100%;
        height: 44px;
    }

    .search-box input {
        font-size: 14px;
    }

    /* Icon group xuống dòng dưới */
    .nav-right {
        width: 100%;
        justify-content: flex-end;
        gap: 10px;
    }

    .icon-btn {
        width: 38px;
        height: 38px;
        font-size: 16px;
    }

    .avatar {
        width: 38px;
        height: 38px;
    }
    /* =========================
  Header & Mobile overflow fixes
  Paste this at the VERY END of your <style>
  (does NOT change any class names or HTML)
========================= */

/* global safety */
*,
*::before,
*::after {
  box-sizing: border-box !important;
}

/* prevent any page horizontal scroll caused by header */
html, body {
  max-width: 100% !important;
  overflow-x: hidden !important;
}

/* make navbar flexible and allow wrapping */
.navbar {
  width: 100% !important;
  padding-left: 20px !important;
  padding-right: 20px !important;
  box-sizing: border-box !important;
  display: flex !important;
  align-items: center !important;
  justify-content: space-between !important;
  flex-wrap: wrap !important; /* allow children to wrap on small screens */
  gap: 10px !important;
}

/* nav-left: allow contents to shrink and wrap */
.nav-left {
  display: flex !important;
  align-items: center !important;
  gap: 12px !important;
  flex: 1 1 auto !important;    /* take remaining space */
  min-width: 0 !important;      /* IMPORTANT so children can shrink (prevents overflow) */
}

/* Search box must be fluid and never a fixed large width */
.search-box {
  width: auto !important;
  max-width: 100% !important;
  flex: 1 1 auto !important;     /* grow/shrink as needed */
  min-width: 0 !important;       /* allow to shrink inside flex container */
  height: 44px !important;
  padding-left: 12px !important;
  padding-right: 12px !important;
  display: flex !important;
  align-items: center !important;
  gap: 8px !important;
}

/* Ensure input can shrink inside search-box */
.search-box input {
  width: 100% !important;
  min-width: 0 !important;
  border: none !important;
  outline: none !important;
  background: transparent !important;
  font-size: 14px !important;
  padding: 6px 0 !important;
  box-sizing: border-box !important;
}

/* nav-right group: allow wrap and shrink */
.nav-right {
  display: flex !important;
  align-items: center !important;
  gap: 10px !important;
  flex: 0 0 auto !important;
  min-width: 0 !important;
  justify-content: flex-end !important;
}

/* shrink icons and avatar slightly on small screens */
.icon-btn {
  width: 40px !important;
  height: 40px !important;
  font-size: 16px !important;
  padding: 0 !important;
  box-sizing: border-box !important;
}

.icon-btn i {
  pointer-events: none;
}

/* avatar scale */
.avatar {
  width: 40px !important;
  height: 40px !important;] 
  object-fit: cover !important;
}

/* Logo sizing to prevent pushing */
.logo {
  font-size: 26px !important;
  white-space: nowrap !important;
  flex: 0 0 auto !important;
  margin-right: 6px !important;
}

/* Specific small screen tweaks */
@@media (max-width: 768px) {

  /* make nav-left occupy full row and push icons to next row */
  .nav-left {
    width: 100% !important;
    order: 1 !important;
    padding-right: 8px !important;
  }

  /* icons row below */
  .nav-right {
    width: 100% !important;
    order: 2 !important;
    justify-content: flex-start !important;
    padding-left: 6px !important;
    gap: 12px !important;
  }

  /* reduce navbar padding on small screens */
  .navbar {
    padding-left: 12px !important;
    padding-right: 12px !important;
  }

  /* ensure search-box left icon doesn't push */
  .search-box i {
    flex: 0 0 auto !important;
  }
        
  /* thumb/overflow safety for any image/icon */
  img, svg {
    max-width: 100% !important;
    height: auto !important;
  }
}

/* Extra safety: if any element still has inline large width, force no overflow */
[style] {
  max-width: 100% !important;
  box-sizing: border-box !important;
  min-width: 0 !important;
}

}

    </style>
</head>
<body>

    <!-- ========== NAVBAR ========== -->
    <header class="navbar">
        <div class="nav-left">
            <div class="logo">MORENT</div>

            <div class="search-box">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search something here" />
                <i class="fa-solid fa-sliders"></i>
            </div>
        </div>

        <div class="nav-right">
            <div class="icon-btn"><i class="fa-regular fa-heart"></i></div>

            <div class="icon-btn notification">
                <i class="fa-regular fa-bell"></i>
                <span class="dot"></span>
            </div>

            <div class="icon-btn"><i class="fa-solid fa-gear"></i></div>

            <a href="@Url.Action("admin", "Home")">
                <img src="https://i.pravatar.cc/40" class="avatar" />
            </a>

        </div>
    </header>

    <!-- ========== CONTENT ========== -->
    <div class="main-container">
        @RenderBody()
    </div>

    <!-- ========== FOOTER ========== -->
    <footer class="morent-footer">
        <div class="footer-top">
            <div class="footer-col">
                <h3 class="footer-logo">MORENT</h3>
                <p>
                    Our vision is to provide convenience and <br />
                    help increase your sales business.
                </p>
            </div>

            <div class="footer-col">
                <h4>About</h4>
                <a>How it works</a>
                <a>Featured</a>
                <a>Partnership</a>
                <a>Business Relation</a>
            </div>
                
            <div class="footer-col">
                <h4>Community</h4>
                <a>Events</a>
                <a>Blog</a>
                <a>Podcast</a>
                <a>Invite a friend</a>
            </div>

            <div class="footer-col">
                <h4>Socials</h4>
                <a>Discord</a>
                <a>Instagram</a>
                <a>Twitter</a>
                <a>Facebook</a>
            </div>
        </div>

        <hr class="footer-line" />

        <div class="footer-bottom">
            <span>©2022 MORENT. All rights reserved</span>
            <div class="footer-links">
                <a>Privacy & Policy</a>
                <a>Terms & Condition</a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
